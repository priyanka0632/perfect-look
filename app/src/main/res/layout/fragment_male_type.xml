<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".male_bodyType">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/male_body_type"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        >


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CCFFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 of 4"
            android:textColor="#000"
            android:textSize="20dp"
            android:fontFamily="serif-monospace"
            android:layout_centerHorizontal="true"
            android:id="@+id/number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Body Type"
            android:textColor="#000"
            android:textSize="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/number"
            android:fontFamily="serif-monospace"
            android:id="@+id/body_type"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Choose your type -"
            android:textStyle="bold"
            android:layout_below="@+id/body_type"
            android:textSize="20dp"
            android:textColor="#000"
            android:fontFamily="serif-monospace"
            android:layout_centerHorizontal="true"
            android:id="@+id/choose_type"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/choose_type"
            android:layout_marginTop="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                    <ImageView
                        android:id="@+id/rect_shape"
                        android:layout_width="wrap_content"
                        android:layout_height="220dp"
                        android:src="@drawable/man_rectangle_shape"
                        />

                    <RelativeLayout
                        android:id="@+id/relative_rect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rect_shape"
                        android:layout_centerHorizontal="true"
                        >

                        <View
                            android:id="@+id/view_rect"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                           android:layout_centerVertical="true"
                            android:background="@drawable/bullets"

                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/view_rect"
                            android:fontFamily="serif-monospace"
                            android:text="Aligned Shoulders"
                            android:textColor="#000"
                            android:textSize="18dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_rect1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/relative_rect"
                        android:layout_centerHorizontal="true">

                        <View
                            android:id="@+id/view_rect1"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                           android:layout_centerVertical="true"
                            android:background="@drawable/bullets"

                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/view_rect1"
                            android:textStyle="bold"
                            android:fontFamily="serif-monospace"
                            android:text="Aligned Waist"
                            android:textColor="#000"
                            android:textSize="18dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_rect2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/relative_rect1"
                        android:layout_centerHorizontal="true">

                        <View
                            android:id="@+id/view_rect2"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                           android:layout_centerVertical="true"
                            android:background="@drawable/bullets"

                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:layout_toRightOf="@+id/view_rect2"
                            android:fontFamily="serif-monospace"
                            android:text="Aligned Hips"
                            android:textColor="#000"
                            android:textSize="18dp" />


                    </RelativeLayout>


                    <Button

                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relative_rect2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/blue_buttons"
                        android:fontFamily="serif-monospace"
                        android:text="RECTANGLE"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:id="@+id/btn_male_rectangle"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                    <ImageView
                        android:id="@+id/trapezoid_shape"
                        android:layout_width="wrap_content"
                        android:layout_height="220dp"
                        android:src="@drawable/man_trapezoid_shapae"
                        />

                    <RelativeLayout
                        android:id="@+id/relative_trapezoid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/trapezoid_shape"
                        android:layout_centerHorizontal="true"
                        >

                        <View
                            android:id="@+id/view_trapezoid"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bullets"

                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:layout_toRightOf="@+id/view_trapezoid"
                            android:fontFamily="serif-monospace"
                            android:text="Broad Shoulders"
                            android:textColor="#000"
                            android:textSize="18dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_trapezoid1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/relative_trapezoid"
                        android:layout_centerHorizontal="true">

                        <View
                            android:id="@+id/view_trapezoid1"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bullets"

                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/view_trapezoid1"
                            android:fontFamily="serif-monospace"
                            android:text="Narrow Waist"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_trapezoid2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/relative_trapezoid1"
                        android:layout_centerHorizontal="true">

                        <View
                            android:id="@+id/view_trapezoid2"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bullets"

                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/view_trapezoid2"
                            android:fontFamily="serif-monospace"
                            android:text="Narrow Hips"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="18dp" />


                    </RelativeLayout>


                    <Button

                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relative_trapezoid2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/blue_buttons"
                        android:fontFamily="serif-monospace"
                        android:text="TRAPEZOID"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:id="@+id/btn_male_trapezoid"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                    <ImageView
                        android:id="@+id/oval_shape"
                        android:layout_width="wrap_content"
                        android:layout_height="220dp"
                        android:src="@drawable/man_oval_shape"
                        />

                    <RelativeLayout
                        android:id="@+id/relative_oval"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oval_shape"
                        android:layout_centerHorizontal="true"
                        >

                        <View
                            android:id="@+id/view_oval"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bullets"

                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/view_oval"
                            android:fontFamily="serif-monospace"
                            android:textStyle="bold"
                            android:text="Slim Shoulders"
                            android:textColor="#000"
                            android:textSize="18dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_oval1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/relative_oval"
                        android:layout_centerHorizontal="true">

                        <View
                            android:id="@+id/view_oval1"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bullets"

                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/view_oval1"
                            android:textStyle="bold"
                            android:fontFamily="serif-monospace"
                            android:text="Wider Waist"
                            android:textColor="#000"
                            android:textSize="18dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_oval2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/relative_oval1"
                        android:layout_centerHorizontal="true">

                        <View
                            android:id="@+id/view_oval2"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bullets"

                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:layout_toRightOf="@+id/view_oval2"
                            android:fontFamily="serif-monospace"
                            android:text="Slim Hips"
                            android:textColor="#000"
                            android:textSize="18dp" />


                    </RelativeLayout>


                    <Button

                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relative_oval2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/blue_buttons"
                        android:fontFamily="serif-monospace"
                        android:text="OVAL"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:id="@+id/btn_male_oval"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"

                    >

                    <ImageView
                        android:id="@+id/triangle_shape"
                        android:layout_width="wrap_content"
                        android:layout_height="220dp"
                        android:src="@drawable/man_triangle_shape"
                        />

                    <RelativeLayout
                        android:id="@+id/relative_triangle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/triangle_shape"
                        android:layout_centerHorizontal="true"
                        >

                        <View
                            android:id="@+id/view_triangle"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bullets"

                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:layout_toRightOf="@+id/view_triangle"
                            android:fontFamily="serif-monospace"
                            android:text="Narrow Shoulders"
                            android:textColor="#000"
                            android:textSize="18dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_triangle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/relative_triangle"
                        android:layout_centerHorizontal="true">

                        <View
                            android:id="@+id/view_triangle1"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bullets"

                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:layout_toRightOf="@+id/view_triangle1"
                            android:fontFamily="serif-monospace"
                            android:text="Slightly Wide Waist"
                            android:textColor="#000"
                            android:textSize="18dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_triangle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/relative_triangle1"
                        android:layout_centerHorizontal="true">

                        <View
                            android:id="@+id/view_triangle2"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bullets"

                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:layout_toRightOf="@+id/view_triangle2"
                            android:fontFamily="serif-monospace"
                            android:text="Wider Hips"
                            android:textColor="#000"
                            android:textSize="18dp" />


                    </RelativeLayout>


                    <Button

                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relative_triangle2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/blue_buttons"
                        android:fontFamily="serif-monospace"
                        android:text="TRIANGLE"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:id="@+id/btn_male_inverted"
                        />


                </RelativeLayout>




            </LinearLayout>



        </HorizontalScrollView>



</RelativeLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/swipe_arrow"
        android:layout_alignParentBottom="true"
        android:id="@+id/swipe"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@+id/swipe_left"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swipe Left"
        android:textColor="#fff"
        android:layout_marginBottom="7dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="13dp"
        android:fontFamily="serif-monospace"
        android:id="@+id/swipe_left"
        android:layout_alignParentBottom="true"

        />


</RelativeLayout>