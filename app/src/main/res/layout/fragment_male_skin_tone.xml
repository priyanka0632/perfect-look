<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".male_skin_tone">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/male_skin_tone"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp">


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CCFFFFFF">

        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 of 4"
            android:textSize="20dp"
            android:textColor="#000"
            android:fontFamily="serif-monospace"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skin Tone"
            android:textSize="50dp"
            android:layout_below="@+id/number"
           android:layout_marginTop="80dp"
            android:textColor="#000"
            android:fontFamily="serif-monospace"
            android:layout_centerHorizontal="true"
            android:id="@+id/text"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Choose your skin tone -"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@+id/text"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif-monospace"
            android:id="@+id/skin_tone"/>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/skin_tone"
            android:layout_marginTop="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="65dp"
                    >


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/male_fair"
                        android:id="@+id/fair"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"

                        />

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blue_buttons"
                        android:layout_below="@+id/fair"
                        android:layout_centerHorizontal="true"
                        android:text="FAIR TONE"
                        android:textColor="#000"
                        android:fontFamily="serif-monospace"
                        android:textSize="20dp"
                        android:id="@+id/btn_male_fair"
                        android:layout_marginTop="20dp"
                        />





                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="70dp"
                    >


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/male_dusky"
                        android:id="@+id/dusky"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"

                        />

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blue_buttons"
                        android:layout_below="@+id/dusky"
                        android:layout_centerHorizontal="true"
                        android:text="DUSKY TONE"
                        android:textColor="#000"
                        android:fontFamily="serif-monospace"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/btn_male_dusky"
                        />





                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="55dp"
                    >


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/male_dark"
                        android:id="@+id/dark"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"

                        />

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blue_buttons"
                        android:layout_below="@+id/dark"
                        android:layout_centerHorizontal="true"
                        android:text="DARK TONE"
                        android:textColor="#000"
                        android:fontFamily="serif-monospace"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/btn_male_dark"
                        />





                </RelativeLayout>






            </LinearLayout>





        </HorizontalScrollView>


    </RelativeLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/swipe_arrow"
        android:layout_alignParentBottom="true"
        android:id="@+id/swipe"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@+id/swipe_left"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swipe Left"
        android:textColor="#fff"
        android:layout_marginBottom="7dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="13dp"
        android:fontFamily="serif-monospace"
        android:id="@+id/swipe_left"
        android:layout_alignParentBottom="true"

        />


</RelativeLayout>