<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".My_profile">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/edit_profile"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CCFFFFFF"/>


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/my_profile"
            app:civ_border_width="2dp"
            app:civ_border_color="#fff"/>




<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/camera_icon"
    android:layout_below="@id/profile_image"
    android:layout_centerHorizontal="true"
    android:paddingLeft="70dp"
   android:id="@+id/onPickImage"
    android:layout_marginTop="-30dp"
    />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="#000"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/profile_image"
            android:fontFamily="serif-monospace"
            android:layout_marginTop="10dp"
            android:id="@+id/username"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/username"
             android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_edittext"
            android:id="@+id/relative">




                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fullname"
                    android:textColor="#000"
                    android:enabled="false"
                    android:inputType="text"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:imeOptions="actionNext"
                    android:fontFamily="serif-monospace"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:maxLines="1"
                    android:layout_toLeftOf="@+id/image"
                    android:id="@+id/fullname_et"

                    />



            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/image"
                android:layout_height="wrap_content"
                android:src="@drawable/username"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>




        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/relative"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_edittext"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/relative1">


                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:inputType="text"
                    android:enabled="false"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:imeOptions="actionDone"
                    android:fontFamily="serif-monospace"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toLeftOf="@+id/image1"
                    android:maxLines="1"
                    android:id="@+id/username_et"
                    />



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/username"
                android:id="@+id/image1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/relative1"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_edittext"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/relative2">



                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="dd/mm/yy"
                    android:layout_toLeftOf="@+id/image2"
                    android:textSize="16dp"
                    android:enabled="false"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:fontFamily="serif-monospace"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:maxLines="1"
                    android:id="@+id/dob_et"
                    />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dob_icon"
                android:id="@+id/image2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/relative2"
            android:id="@+id/relative3"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_edittext"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email ID"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionDone"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:fontFamily="serif-monospace"
                   android:textColor="#000"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:maxLines="1"
                    android:enabled="false"
                    android:layout_toLeftOf="@+id/image3"
                    android:id="@+id/emailId_et"
                    />



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/email"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:id="@+id/image3"/>



        </RelativeLayout>



     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Edit Details"
         android:layout_below="@+id/relative3"
         android:textColor="#000"
         android:textSize="20dp"
         android:layout_centerHorizontal="true"
         android:fontFamily="serif-monospace"
         android:layout_marginTop="5dp"
         android:id="@+id/edit_details"
         />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_icon"
            android:layout_below="@+id/relative3"
            android:layout_toRightOf="@+id/edit_details"
            android:layout_marginTop="10dp"
            android:id="@+id/edit"/>


        <ImageView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
           android:padding="5dp"
            android:src="@drawable/settings_icon"
          />

        <Button
            android:layout_width="match_parent"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_button"
            android:text="SAVE DETAILS"
            android:visibility="invisible"
            android:textSize="20dp"
            android:fontFamily="serif-monospace"
            android:layout_below="@+id/edit_details"
            android:id="@+id/save_details"
            android:layout_marginTop="-20dp"
            />






    </RelativeLayout>




    </RelativeLayout>

